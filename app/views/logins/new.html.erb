<div>
    <% if flash[:error] %>
    <div class ="error"><%= flash[:error] %></div>
    <% end %>

    <%= form_tag('/login/') do %>
    <%= label_tag("Enter Username: ") %>
    <%= text_field_tag(:user_name) %><br>

    <%= label_tag("Enter Password: ") %>
    <%= password_field_tag(:password) %><br>


    <%= submit_tag("Submit") %>
    <% end %>

    <%= button_to "Create New Artist", new_artist_path, method: :get %>
</div>