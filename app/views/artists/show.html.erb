<section class='hero is-primary'>
<div class='hero-body'>
<div class='container'>
<h1 class='title'><%= @artist.name %></h1>

<h2 class='subtitle'>Hometown: <%= @artist.hometown %></h2>
</div>
</div>
</section>

<h3>Username: <%= @artist.user_name %></h3>
<div><%= link_to "New Session", new_artist_session_path(@artist.id) %></div>
<section class='section has-background-white-ter'>
<% if @artist.sessions.count > 0 %>
<% next_sessn = next_session(@artist) %>
<% if next_sessn == nil %>
<div> No Upcoming Sessions </div>
<%else%>
<br><div> Next Session: <%= link_to next_sessn.show_date_and_time, artist_session_path(id: next_sessn.id, artist_id: next_sessn.artist_id) %>
<%end%>
<ul>
    <% @artist.sessions.each do |session| %>
        <li>
            <%= link_to session.show_date_and_time, artist_session_path(id: session.id, artist_id: session.artist_id) %>
        </li>
    <% end %>

</ul>
<% else %>
<div> You have no sessions currently scheduled </div>
<%end%>
</section>
<br>
<div class='buttons'>
<button class='button is-link is-light'><%= link_to "Edit Artist Info", edit_artist_path(@artist)%></button>
<button class='button is-link is-light'><%= link_to "Logout", '/logout' %></button>
</div>