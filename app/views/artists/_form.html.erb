<div class='has-background-white-ter'>
<div class='columns'>
<div class='column is-half'>
<%= form_for(@artist) do |f| %>
<section class='has-text-danger'>
    <% if @artist.errors.any? %>
        <ul>
            <% @artist.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
            <% end %>
        </ul>
    <% end %>
    </section>
    <div class='control'>
    <%= f.label :name, class: 'label'%>
    <%= f.text_field :name, class: 'input' %>
    </div>
    <br>

    <div class='control'>
    <%= f.label :user_name, class: 'label' %>
    <%= f.text_field :user_name, class: 'input' %>
    </div>
    <br>

    <div class='control'>
    <%= f.label :hometown, class: 'label' %>
    <%= f.text_field :hometown, class: 'input' %>
    </div>
    <br>

    <div class='control'>
    <%= f.label :password, class: 'label'%>
    <%= f.password_field :password, class: 'input' %>
    </div>
    <br>

    <div class='control'>
    <%= f.label :password_confirmation, class: 'label' %>
    <%= f.password_field :password_confirmation, class: 'input' %>
    </div>
    <br>

    <%= f.submit class: 'button is-link' %>

<% end %>
</div>
</div>
</div>